<nav class="navbar navbar-inverse">
  <div class="container-fluid">
    <div class="navbar-header">
      <a class="navbar-brand" href="/">Cobra News</a>
    </div>
    <ul class="nav navbar-nav">
      <li><a href="/">Home</a></li>
      <li class="active"><a href="/saved">Saved Articles</a></li>
    </ul>
  </div>
</nav>

<div class="jumbotron text-center">
  <div class="overlay">
  </div>
  <div class="background-image">
  </div>
  <div class="caption">
    <h1>Cobra News</h1>
    <p>New York Times Edition</p>
  </div>
</div>

<div class="container-fluid article-container">

  {{#if articles}}
    {{#each articles}}
    <div class="panel panel-default">
      <div class="panel-heading">
        <h4>
          <a class="article-link" target="_blank" href="{{this.url}}">{{this.headline}}</a>
          {{#if this.isSaved}}
            <a class="btn btn-info add-note" data-id={{this._id}}>Add a Note</a>
            <button type="button" class="btn btn-info" data-id={{this._id}} id="myBtn">Add a Note</button>      
            <a class="btn btn-danger delete" data-id={{this._id}}>Delete from Saved</a>
          {{else}}
            <a class="btn btn-success save" data-id={{this._id}}>Save Article</a>
          {{/if}}
        </h4>
      </div>
      <div class="panel-body">
        "{{this.summary}}"
      </div>
      {{#if notes}}
      {{else}}
      <div class="container">
  <table class="table table-hover">
    <thead>
      <tr>
        <th>Notes</th>
        <th> </th>
      </tr>
    </thead>
    <tbody>
      {{#each notes}}
      <tr>
        <td>{{this.body}}</td>
        <td><a class="btn btn-success delete-note" data-id={{this._id}}>Delete This Note</a></td>
      </tr>
      {{/each}}
    </tbody>
  </table>
</div>
      {{/if}}
    </div> 
    {{/each}}
  {{else}}
    <div class='alert alert-warning text-center'>
      <h4>There are no saved articles.  Go back top home and save at least one article"</h4>
    </div> 
  {{/if}}
</div>


<div class="container">
  <!-- Modal -->
  <div class="modal fade" id="myModal" role="dialog">
    <div class="modal-dialog">

      <!-- Modal content-->
      <div class="modal-content">
        <div class="modal-header">
          <button type="button" class="close" data-dismiss="modal">&times;</button>
          <h4 style="color:red;">Add a Note</h4>
        </div>
        <div class="modal-body">
          <form role="form" action="/submit" method="post">
            <input type="hidden" id="articleId" name="articleId" value="104" />
            <div class="form-group">
              <label for="body">Note:</label>
              <input type="text" class="form-control" name="body" id="body" placeholder="Enter note">
            </div>
            <button type="submit" class="btn btn-default btn-success btn-block">Submit your Note</button>
          </form>
        </div>
        <div class="modal-footer">
          <button type="submit" class="btn btn-default btn-default pull-left" data-dismiss="modal"><span class="glyphicon glyphicon-remove"></span> Cancel</button>
        </div>
      </div>
    </div>
  </div> 
</div>




<footer class="footer">
  <div class="container">
    <p>Cobra News - New York Times Scraper</p>
  </div>
</footer>

